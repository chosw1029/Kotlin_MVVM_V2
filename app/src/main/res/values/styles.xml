<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>


    <!-- Widget styles -->
    <style name="Widget.NextUs" parent="@android:style/Widget.Material" />

    <style name="Widget.NextUs.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.NextUs.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/color_background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.NextUs.ToolbarTitle</item>
    </style>

    <style name="Widget.NextUs.BottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.NextUs.BottomNavigation</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.NextUs.BottomNavigation.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.NextUs.BottomNavigation</item>
        <item name="itemTextColor">@color/bottom_navigation_item_text</item>
        <item name="itemIconTint">@color/bottom_navigation_item_icon</item>
    </style>

    <!-- Navigation -->
    <style name="Widget.NextUs.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/ioschedNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.NextUs.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="Widget.NextUs.HashtagIoDecoration">
        <item name="android:drawable">@drawable/hashtag_io19</item>
        <item name="margin">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="TextAppearance.NextUs.BottomNavigation" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.NextUs.BottomNavigation.Active" parent="@style/TextAppearance.NextUs.BottomNavigation">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- MyPage -->
    <style name="Widget.NextUs.Mypage" />

    <style name="Widget.NextUs.Mypage.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.NextUs.Button</item>

        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Account dialogs -->
    <style name="Widget.NextUs.BorderlessButton.NormalText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Widget.NextUs.AccountDialog.ActionButton" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.NextUs.AccountDialog.ManageAccountButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialComponents.Chip
        </item>
    </style>

    <!-- Settings -->
    <style name="Widget.NextUs.Settings" />

    <style name="Widget.NextUs.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/margin_small</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>


    <!-- TextAppearance -->
    <!-- List item primary text, e.g. event titles, codelab titles -->
    <style name="TextAppearance.NextUs.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Account dialogs -->
    <style name="TextAppearance.NextUs.AccountDialog.Username" parent="@style/TextAppearance.NextUs.ListPrimary" />

    <!-- Settings -->
    <style name="TextAppearance.NextUs.Info" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="TextAppearance.NextUs.Button" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.NextUs.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

</resources>